<style>
    .content-area {
        margin-left: var(--sidebar-width);
        padding: 2rem;
        max-width: calc(100% - var(--sidebar-width) - 240px);
        min-height: calc(100vh - var(--header-height));
        margin-top: var(--header-height);
    }

    :global(.article) {
        max-width: 800px;
        margin: 0 auto;
    }

    /* Breadcrumb */
    :global(.breadcrumb) {
        margin-bottom: 2rem;
    }

    :global(.breadcrumb-list) {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        list-style: none;
        margin: 0;
        padding: 0;
        font-size: 0.875rem;
        color: var(--color-text-secondary);
    }

    :global(.breadcrumb-list li:not(:last-child)::after) {
        content: "/";
        margin-left: 0.5rem;
        color: var(--color-border-hover);
    }

    :global(.breadcrumb-list a) {
        color: var(--color-text-secondary);
    }

    :global(.breadcrumb-list a:hover) {
        color: var(--color-primary);
    }

    /* Article Header */
    :global(.article-header) {
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--color-border);
    }

    :global(.badge-group) {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    :global(.badge) {
        display: inline-flex;
        padding: 0.25rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 500;
        border-radius: 9999px;
    }

    :global(.badge-primary) {
        background: rgba(79, 70, 229, 0.1);
        color: var(--color-primary);
    }

    :global(.badge-secondary) {
        background: var(--color-bg-tertiary);
        color: var(--color-text-secondary);
    }

    :global(.article-title) {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: var(--color-text);
    }

    :global(.article-description) {
        font-size: 1.125rem;
        color: var(--color-text-secondary);
        margin-bottom: 1rem;
        line-height: 1.7;
    }

    :global(.article-meta) {
        display: flex;
        gap: 1.5rem;
        font-size: 0.875rem;
        color: var(--color-text-secondary);
    }

    :global(.reading-time::before) {
        content: "•";
        margin-right: 1.5rem;
    }

    /* Article Content */
    :global(.article-content) {
        display: flex;
        flex-direction: column;
        gap: 3rem;
    }

    :global(.article-content h2) {
        font-size: 1.875rem;
        margin-bottom: 1rem;
        color: var(--color-text);
        padding-top: 1rem;
    }

    :global(.article-content h3) {
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
        margin-top: 2rem;
        color: var(--color-text);
    }

    :global(.article-content p) {
        font-size: 1rem;
        line-height: 1.7;
        color: var(--color-text);
        margin-bottom: 1rem;
    }

    /* Code Block */
    :global(.code-block) {
        background: #1e293b;
        border-radius: 0.5rem;
        overflow: hidden;
        margin: 1.5rem 0;
    }

    :global(.code-header) {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 1rem;
        background: #0f172a;
        border-bottom: 1px solid #334155;
    }

    :global(.code-lang) {
        font-size: 0.75rem;
        color: #94a3b8;
        font-weight: 500;
        text-transform: uppercase;
    }

    :global(.code-copy) {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: none;
        border: none;
        color: #94a3b8;
        font-size: 0.875rem;
        cursor: pointer;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        transition: all 0.2s;
    }

    :global(.code-copy:hover) {
        background: #334155;
        color: #e2e8f0;
    }

    :global(.code-content) {
        padding: 1rem;
        margin: 0;
        overflow-x: auto;
    }

    :global(.code-content code) {
        font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
        font-size: 0.875rem;
        line-height: 1.7;
        color: #e2e8f0;
    }

    /* Article Footer */
    :global(.article-footer) {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid var(--color-border);
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    :global(.pagination) {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    :global(.pagination-link) {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        border: 1px solid var(--color-border);
        border-radius: 0.5rem;
        transition: all 0.2s;
        color: var(--color-text);
    }

    :global(.pagination-link:hover) {
        border-color: var(--color-primary);
        background: var(--color-bg-secondary);
    }

    :global(.pagination-prev) {
        justify-content: flex-start;
    }

    :global(.pagination-next) {
        justify-content: flex-end;
        text-align: right;
    }

    :global(.pagination-label) {
        display: block;
        font-size: 0.75rem;
        color: var(--color-text-secondary);
        margin-bottom: 0.25rem;
    }

    :global(.pagination-title) {
        display: block;
        font-weight: 500;
    }

    /* Feedback */
    :global(.feedback) {
        text-align: center;
        padding: 1.5rem;
        background: var(--color-bg-secondary);
        border-radius: 0.5rem;
    }

    :global(.feedback-title) {
        font-weight: 500;
        margin-bottom: 1rem;
    }

    :global(.feedback-buttons) {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    :global(.feedback-button) {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1.5rem;
        background: var(--color-bg);
        border: 1px solid var(--color-border);
        border-radius: 0.5rem;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 0.875rem;
        color: var(--color-text);
    }

    :global(.feedback-button:hover) {
        border-color: var(--color-primary);
        color: var(--color-primary);
    }

    @media (max-width: 1280px) {
        .content-area {
            max-width: calc(100% - var(--sidebar-width));
        }
    }

    @media (max-width: 1024px) {
        .content-area {
            margin-left: 0;
            max-width: 100%;
        }
    }

    	@media (max-width: 768px) {
		.content-area {
			padding: 1rem;
		}

		:global(.article-title) {
			font-size: 2rem;
		}

		:global(.pagination) {
			grid-template-columns: 1fr;
		}
	}

	/* Separación entre secciones */
	.content-area > div {
		scroll-margin-top: calc(var(--header-height) + 2rem);
		margin-bottom: 4rem;
		padding-bottom: 4rem;
		border-bottom: 1px solid var(--color-border);
	}

	.content-area > div:last-child {
		border-bottom: none;
	}
</style>

<script>
	// Smooth scroll para los enlaces del sidebar
	document.addEventListener('DOMContentLoaded', () => {
		document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
			anchor.addEventListener('click', function (e: Event) {
				e.preventDefault();
				const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
				if (href) {
					const target = document.querySelector(href);
					if (target) {
						target.scrollIntoView({
							behavior: 'smooth',
							block: 'start'
						});
					}
				}
			});
		});
	});
</script>
</style>