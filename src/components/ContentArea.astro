<style>
	.content-area {
		margin-left: var(--sidebar-width);
		padding: 2rem;
		max-width: calc(100% - var(--sidebar-width) - 240px);
		min-height: calc(100vh - var(--header-height));
		margin-top: var(--header-height);
	}

	.article {
		max-width: 800px;
		margin: 0 auto;
	}

	/* Breadcrumb */
	.breadcrumb {
		margin-bottom: 2rem;
	}

	.breadcrumb-list {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		list-style: none;
		margin: 0;
		padding: 0;
		font-size: 0.875rem;
		color: var(--color-text-secondary);
	}

	.breadcrumb-list li:not(:last-child)::after {
		content: "/";
		margin-left: 0.5rem;
		color: var(--color-border-hover);
	}

	.breadcrumb-list a {
		color: var(--color-text-secondary);
	}

	.breadcrumb-list a:hover {
		color: var(--color-primary);
	}

	/* Article Header */
	.article-header {
		margin-bottom: 3rem;
		padding-bottom: 2rem;
		border-bottom: 1px solid var(--color-border);
	}

	.badge-group {
		display: flex;
		gap: 0.5rem;
		margin-bottom: 1rem;
	}

	.badge {
		display: inline-flex;
		padding: 0.25rem 0.75rem;
		font-size: 0.75rem;
		font-weight: 500;
		border-radius: 9999px;
	}

	.badge-primary {
		background: rgba(79, 70, 229, 0.1);
		color: var(--color-primary);
	}

	.badge-secondary {
		background: var(--color-bg-tertiary);
		color: var(--color-text-secondary);
	}

	.article-title {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: var(--color-text);
	}

	.article-description {
		font-size: 1.125rem;
		color: var(--color-text-secondary);
		margin-bottom: 1rem;
		line-height: 1.7;
	}

	.article-meta {
		display: flex;
		gap: 1.5rem;
		font-size: 0.875rem;
		color: var(--color-text-secondary);
	}

	.reading-time::before {
		content: "•";
		margin-right: 1.5rem;
	}

	/* Article Content */
	.article-content {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.article-content h2 {
		font-size: 1.875rem;
		margin-bottom: 1rem;
		color: var(--color-text);
		padding-top: 1rem;
	}

	.article-content h3 {
		font-size: 1.5rem;
		margin-bottom: 0.75rem;
		margin-top: 2rem;
		color: var(--color-text);
	}

	.article-content p {
		font-size: 1rem;
		line-height: 1.7;
		color: var(--color-text);
		margin-bottom: 1rem;
	}

	.article-content ul {
		padding-left: 1.5rem;
		margin: 1rem 0;
	}

	.article-content li {
		margin-bottom: 0.5rem;
		line-height: 1.7;
	}

	/* Callouts */
	.callout {
		display: flex;
		gap: 1rem;
		padding: 1rem;
		border-radius: 0.5rem;
		margin: 1.5rem 0;
		border-left: 3px solid;
	}

	.callout-info {
		background: rgba(59, 130, 246, 0.1);
		border-color: #3B82F6;
	}

	.callout-warning {
		background: rgba(245, 158, 11, 0.1);
		border-color: #F59E0B;
	}

	.callout-success {
		background: rgba(16, 185, 129, 0.1);
		border-color: #10B981;
	}

	.callout-icon {
		flex-shrink: 0;
	}

	.callout-info .callout-icon { color: #3B82F6; }
	.callout-warning .callout-icon { color: #F59E0B; }
	.callout-success .callout-icon { color: #10B981; }

	.callout-content p {
		margin: 0;
	}

	.callout-title {
		font-weight: 600;
		margin-bottom: 0.25rem !important;
	}

	/* Code Block */
	.code-block {
		background: #1e293b;
		border-radius: 0.5rem;
		overflow: hidden;
		margin: 1.5rem 0;
	}

	.code-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0.75rem 1rem;
		background: #0f172a;
		border-bottom: 1px solid #334155;
	}

	.code-lang {
		font-size: 0.75rem;
		color: #94a3b8;
		font-weight: 500;
		text-transform: uppercase;
	}

	.code-copy {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		background: none;
		border: none;
		color: #94a3b8;
		font-size: 0.875rem;
		cursor: pointer;
		padding: 0.25rem 0.5rem;
		border-radius: 0.25rem;
		transition: all 0.2s;
	}

	.code-copy:hover {
		background: #334155;
		color: #e2e8f0;
	}

	.code-content {
		padding: 1rem;
		margin: 0;
		overflow-x: auto;
	}

	.code-content code {
		font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
		font-size: 0.875rem;
		line-height: 1.7;
		color: #e2e8f0;
	}

	/* Article Footer */
	.article-footer {
		margin-top: 4rem;
		padding-top: 2rem;
		border-top: 1px solid var(--color-border);
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.pagination {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
	}

	.pagination-link {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1rem;
		border: 1px solid var(--color-border);
		border-radius: 0.5rem;
		transition: all 0.2s;
		color: var(--color-text);
	}

	.pagination-link:hover {
		border-color: var(--color-primary);
		background: var(--color-bg-secondary);
	}

	.pagination-prev {
		justify-content: flex-start;
	}

	.pagination-next {
		justify-content: flex-end;
		text-align: right;
	}

	.pagination-label {
		display: block;
		font-size: 0.75rem;
		color: var(--color-text-secondary);
		margin-bottom: 0.25rem;
	}

	.pagination-title {
		display: block;
		font-weight: 500;
	}

	/* Feedback */
	.feedback {
		text-align: center;
		padding: 1.5rem;
		background: var(--color-bg-secondary);
		border-radius: 0.5rem;
	}

	.feedback-title {
		font-weight: 500;
		margin-bottom: 1rem;
	}

	.feedback-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
	}

	.feedback-button {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1.5rem;
		background: var(--color-bg);
		border: 1px solid var(--color-border);
		border-radius: 0.5rem;
		cursor: pointer;
		transition: all 0.2s;
		font-size: 0.875rem;
		color: var(--color-text);
	}

	.feedback-button:hover {
		border-color: var(--color-primary);
		color: var(--color-primary);
	}

	@media (max-width: 1280px) {
		.content-area {
			max-width: calc(100% - var(--sidebar-width));
		}
	}

	@media (max-width: 1024px) {
		.content-area {
			margin-left: 0;
			max-width: 100%;
		}
	}

	@media (max-width: 768px) {
		.content-area {
			padding: 1rem;
		}

		.article-title {
			font-size: 2rem;
		}

		.pagination {
			grid-template-columns: 1fr;
		}
	}
</style>
