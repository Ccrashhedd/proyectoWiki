<style>
	.toc {
		position: fixed;
		right: 0;
		top: var(--header-height);
		width: 240px;
		height: calc(100vh - var(--header-height));
		border-left: 1px solid var(--color-border);
		overflow-y: auto;
		display: none;
	}

	.toc-content {
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.toc-title {
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--color-text-secondary);
		margin: 0;
	}

	.toc-nav {
		flex: 1;
	}

	.toc-list {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.toc-sublist {
		list-style: none;
		margin: 0.5rem 0 0 0;
		padding: 0 0 0 1rem;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		border-left: 1px solid var(--color-border);
	}

	.toc-link {
		display: block;
		font-size: 0.8125rem;
		color: var(--color-text-secondary);
		line-height: 1.5;
		transition: color 0.2s;
		padding: 0.125rem 0;
	}

	.toc-link:hover {
		color: var(--color-primary);
	}

	.toc-link.active {
		color: var(--color-primary);
		font-weight: 500;
	}

	.toc-footer {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		padding-top: 1rem;
		border-top: 1px solid var(--color-border);
	}

	.toc-footer-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.8125rem;
		color: var(--color-text-secondary);
		transition: color 0.2s;
	}

	.toc-footer-link:hover {
		color: var(--color-primary);
	}

	.toc::-webkit-scrollbar {
		width: 6px;
	}

	.toc::-webkit-scrollbar-track {
		background: transparent;
	}

	.toc::-webkit-scrollbar-thumb {
		background: var(--color-border);
		border-radius: 3px;
	}

	.toc::-webkit-scrollbar-thumb:hover {
		background: var(--color-border-hover);
	}

	@media (min-width: 1280px) {
		.toc {
			display: block;
		}
	}
</style>
